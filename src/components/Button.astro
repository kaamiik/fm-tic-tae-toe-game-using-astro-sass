---
const { href, theme = "primary", themeNumber = "one" } = Astro.props;
let El = "button";
if (href) El = "a";

const buttonClasses = `button button--${theme} button--${theme}-${themeNumber}`;
---

<El type="button" class={buttonClasses} {href}>
  <slot />
</El>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .button {
    display: inline-flex;
    justify-content: center;
    cursor: pointer;
    text-decoration: none;
    line-height: 1;
    font-family: $button-font-family;
    text-transform: $button-text-transform;
    font-weight: $button-font-weight;
    padding: $button-padding;
    border: $button-border;
    transition: 275ms ease;
  }

  // Primary button base styles
  .button--primary {
    width: 100%;
    color: $button-primary-color;
    font-size: $button-font-size-primary;
  }

  // Secondary button base styles
  .button--secondary {
    color: $button-secondary-color;
    font-size: $button-font-size-secondary;
  }

  // Specific styles for primary-one
  .button--primary-one {
    background-color: $button-primary-one-background;
    box-shadow: $box-shadow-4;
    border-radius: $border-radius-2;

    &:is(:hover, :focus) {
      background-color: $button-primary-one-background-hover;
    }
  }

  // Specific styles for primary-two
  .button--primary-two {
    background-color: $button-primary-two-background;
    box-shadow: $box-shadow-2;
    border-radius: $border-radius-2;

    &:is(:hover, :focus) {
      background-color: $button-primary-two-background-hover;
    }
  }

  // Specific styles for secondary-one
  .button--secondary-one {
    background-color: $button-secondary-one-background;
    box-shadow: $box-shadow-3;
    border-radius: $border-radius-1;

    &:is(:hover, :focus) {
      background-color: $button-secondary-one-background-hover;
    }
  }

  // Specific styles for secondary-two
  .button--secondary-two {
    background-color: $button-secondary-two-background;
    box-shadow: $box-shadow-5;
    border-radius: $border-radius-1;

    &:is(:hover, :focus) {
      background-color: $button-secondary-two-background-hover;
    }
  }
</style>
