<div class="new-game__players">
  <fieldset aria-describedby="player-mark-reminder">
    <legend class="heading-4 | text-center">Pick player 1's mark</legend>
    <div class="new-game__marks">
      <div class="new-game__radios">
        <label class="new-game__radio" for="player-x">
          <span class="visually-hidden">Player-x</span>
          <svg
            aria-hidden="true"
            focusable="false"
            width="32"
            height="32"
            viewBox="0 0 64 64"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M15.002 1.147 32 18.145 48.998 1.147a3 3 0 0 1 4.243 0l9.612 9.612a3 3 0 0 1 0 4.243L45.855 32l16.998 16.998a3 3 0 0 1 0 4.243l-9.612 9.612a3 3 0 0 1-4.243 0L32 45.855 15.002 62.853a3 3 0 0 1-4.243 0L1.147 53.24a3 3 0 0 1 0-4.243L18.145 32 1.147 15.002a3 3 0 0 1 0-4.243l9.612-9.612a3 3 0 0 1 4.243 0Z"
              fill="#A8BFC9"
              fill-rule="evenodd"></path></svg
          >
          <input type="radio" name="player" value="player-x" id="player-x" />
        </label>
        <label class="new-game__radio" for="player-o">
          <span class="visually-hidden">Player-o</span>
          <svg
            aria-hidden="true"
            focusable="false"
            width="31.74"
            height="31.74"
            viewBox="0 0 64 64"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M32 0c17.673 0 32 14.327 32 32 0 17.673-14.327 32-32 32C14.327 64 0 49.673 0 32 0 14.327 14.327 0 32 0Zm0 18.963c-7.2 0-13.037 5.837-13.037 13.037 0 7.2 5.837 13.037 13.037 13.037 7.2 0 13.037-5.837 13.037-13.037 0-7.2-5.837-13.037-13.037-13.037Z"
              fill="#A8BFC9"></path></svg
          >
          <input type="radio" name="player" value="player-o" id="player-o" />
        </label>
      </div>
    </div>
    <p class="margin-block-start-4 text-center" id="player-mark-reminder">
      Remember: X goes first
    </p>
  </fieldset>
</div>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .new-game {
    &__players {
      background-color: $color-neutral-800;
      border-radius: $border-radius-2;
      box-shadow: $box-shadow-1;
      padding: $size-6;
    }

    &__marks {
      background-color: $color-neutral-900;
      border-radius: $border-radius-1;
      margin-block-start: $size-6;
      padding: 9px 8px;
    }

    &__radios {
      display: flex;

      & > * {
        flex: 1;
      }
    }

    &__radio {
      position: relative;
      display: grid;
      place-content: center;
      border-radius: $border-radius-1;
      padding-block: 11px;
    }

    &__radio:has(input[type="radio"]:checked) {
      background-color: $color-neutral-400;

      & path {
        fill: $color-neutral-900;
      }
    }

    &__radio:has(input[type="radio"]:hover:not(:checked)) {
      background-color: rgba(168, 191, 201, 20%);
    }
    &__radio:has(input[type="radio"]:focus-visible) {
      outline: 2px solid $color-accent-400;
      outline-offset: 3px;
    }
  }

  input[type="radio"] {
    position: absolute;
    inset: 0;
    cursor: pointer;
    opacity: 0;
    z-index: 10;
  }
</style>
